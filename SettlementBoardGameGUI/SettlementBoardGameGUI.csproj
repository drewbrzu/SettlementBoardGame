<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="resources\images\brick.png" />
    <None Remove="resources\images\devcard.png" />
    <None Remove="resources\images\stone.png" />
    <None Remove="resources\images\wheat.png" />
